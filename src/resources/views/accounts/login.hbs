<div class="auth-form container" id="auth-form-login">
    <div class="auth-form__container">
        <div class="auth-form__header">
            <h3 class="auth-form__heading">Đăng nhập</h3> 
            <!-- <span class="auth-form__switch-btn">Đăng kí</span> -->
        </div>
        <form action="/accounts/login" method="POST">
            <div class="auth-form__form">
                <div><span class="text-danger" id="tbchung">{{error}}</span></div>
                <div class="auth-form__group">
                    <input id="auth-form__input--email" type="text" class="auth-form__input" name="username" placeholder="Nhập tên đăng nhập">
                </div>

                <div>
                    <input id="auth-form__input--password" type="password" class="auth-form__input" name="password" placeholder="Nhập mật khẩu">
                </div>

            </div>

            <div class="auth-form__aside">
                <div class="auth-form__help">
                    <a href="/accounts/forgot" class="auth-form__help-link auth-form__help-forget">Quên mật khẩu</a>
                    <span class="auth-form__help-separate"></span>
                    <a href="" class="auth-form__help-link">Cần trợ giúp?</a>
                    <span class="auth-form__help-separate"></span>
                    <a href="http://127.0.0.1:3000/accounts/register" class="auth-form__help-link">Đăng ký</a>
                </div>
            </div>

            <div class="auth-form__control">
                {{!-- <button class="btn auth-form__control-back btn--normal">TRỞ LẠI</button> --}}

                <button type="submit" class="btn-dn btn btn-dark">ĐĂNG NHẬP</button>
            </div>
        </form>
    </div>

    <div class="auth-form__socials">
        <p class="auth-form__socials-text">Hoặc đăng nhập bằng</p>

         <div class="auth-form__socials-icons">
            <a href="/accounts/facebook" class="auth-form__socials--facebook btn btn--with-icon btn--size-s">
                <i class="auth-form__socials-icon bi bi-meta"></i>
            </a>
            <a href="/accounts/google" class="auth-form__socials--google btn btn--with-icon btn--size-s">
                <i class="auth-form__socials-icon bi bi-google"></i>
            </a>
        </div>
    </div>
</div>   

<script src="/js/validate.js"></script>