<div class="auth-form container" id="auth-form-register"> 
    <div class="auth-form__container">
        <div class="auth-form__header">     
            <h3 class="auth-form__heading">Đăng ký</h3>
            <!-- <span class="auth-form__switch-btn">Đăng nhập</span> -->
        </div>
        <form action="/accounts/register" method="POST" id="form-dk">
        
        
            <div class="auth-form__form">
                <div><span class="text-danger" id="tbchung">{{error}}</span></div>
                <div class="auth-form__group">
                    
                    <input type="email" id="auth-form__input--email"class="auth-form__input" name="username" placeholder="Nhập email">
                    <input type="password" id="auth-form__input--password" class="auth-form__input" name="password" placeholder="Nhập mật khẩu">
                    <input type="password" id="auth-form__input--confirmpassword" class="auth-form__input" name="confirmPassword" placeholder="Nhập lại mật khẩu">
                    
                </div>
            </div>
            
            <div class="auth-form__aside">
                <p class="auth-form__policy-text">Bằng việc đăng kí, bạn đã đồng ý với HADES về
                    <a href="" class="auth-form__text-link">Điều khoản dịch vụ</a>
                    &
                    <a href="" class="auth-form__text-link">Chính sách bảo mật</a>
            
                </p>
            </div>
            
            <div class="auth-form__control">
                <button class="btn auth-form__control-back btn--normal">TRỞ LẠI</button>    
                <button type="submit" class="btn-dk btn btn-dark">ĐĂNG KÝ</button>
            </div>
        </form>
    </div> 

