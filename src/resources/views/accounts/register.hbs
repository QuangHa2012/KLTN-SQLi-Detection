<div class="auth-form container" id="auth-form-register"> 
    <div class="auth-form__container">
        <div class="auth-form__header">     
            <h3 class="auth-form__heading">Đăng ký</h3>
        </div>

        <form action="/accounts/register" method="POST" id="form-dk">
            <div class="auth-form__form">
                <div><span class="text-danger" id="tbchung">{{error}}</span></div>

                <div class="auth-form__group">
                    <!-- Username -->
                    <input 
                        type="text" 
                        id="auth-form__input--username" 
                        class="auth-form__input" 
                        name="username" 
                        placeholder="Nhập tên đăng nhập" 
                        required
                    >

                    <!-- Email (tuỳ chọn) -->
                    <input 
                        type="email" 
                        id="auth-form__input--email"
                        class="auth-form__input" 
                        name="email" 
                        placeholder="Nhập email"
                    >

                    <!-- Password -->
                    <input 
                        type="password" 
                        id="auth-form__input--password" 
                        class="auth-form__input" 
                        name="password" 
                        placeholder="Nhập mật khẩu" 
                        required
                    >

                    <!-- Confirm Password -->
                    <input 
                        type="password" 
                        id="auth-form__input--confirmpassword" 
                        class="auth-form__input" 
                        name="confirmPassword" 
                        placeholder="Nhập lại mật khẩu" 
                        required
                    >
                </div>
            </div>

            <div class="auth-form__aside">
                <p class="auth-form__policy-text">
                    Bằng việc đăng ký, bạn đã đồng ý với HADES về
                    <a href="#" class="auth-form__text-link">Điều khoản dịch vụ</a>
                    &
                    <a href="#" class="auth-form__text-link">Chính sách bảo mật</a>
                </p>
            </div>
            
            <div class="auth-form__control">
                <a href="/accounts/login" class="btn auth-form__control-back btn--normal">TRỞ LẠI</a>    
                <button type="submit" class="btn-dk btn btn-dark">ĐĂNG KÝ</button>
            </div>
        </form>
    </div> 

