<div class="auth-form container">
    <div class="auth-form__container">
        <h3 class="auth-form__heading">Quên mật khẩu</h3>
        <form action="/accounts/forgot" method="POST">
            <div class="auth-form__group">
                <input type="email" name="email" class="auth-form__input" placeholder="Nhập email của bạn" required>
            </div>
            <div class="auth-form__control">
                <button type="submit" class="btn btn-dark">Gửi liên kết đặt lại</button>
            </div>
        </form>
        {{#if message}}
            <p class="text-success">{{message}}</p>
        {{/if}}
        {{#if error}}
            <p class="text-danger">{{error}}</p>
        {{/if}}

        <a href="/accounts/login" class="back-link">← Quay về đăng nhập</a>
    </div>
</div>


<style>
.auth-form__heading {
    font-size: 24px;
    color: #111;
    margin-bottom: 25px;
    font-weight: 600;
}

.auth-form__group {
    margin-bottom: 20px;
}


.auth-form__control {
    margin-top: 10px;
}

.auth-form__control button[type="submit"] {
    border-radius: 10px;
}

.btn-dark {
    width: 100%;
    background-color: #333;
    color: #fff;
    padding: 12px;
    font-size: 16px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.btn-dark:hover {
    background-color:  #000;
}

.text-success {
    color: #2b9348;
    margin-top: 15px;
}

.text-danger {
    color: #d90429;
    margin-top: 15px;
}

.back-link {
    display: inline-block;
    margin-top: 20px;
    font-size: 14px;
    color: #555;
    text-decoration: none;
    transition: color 0.3s ease;
}

.back-link:hover {
    color: #000;
}

</style>
