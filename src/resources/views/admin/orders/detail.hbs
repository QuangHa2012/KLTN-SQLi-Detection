<div class="container-fluid admin-order-detail">
  <!-- BREADCRUMB -->
  <div class="breadcrumb-bar mb-3">
    <a href="/admin/orders" class="back-link">
      <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách đơn hàng
    </a>
  </div>

  <h2>Chi tiết đơn hàng #{{order.id}}</h2>
  <p><strong>Khách hàng:</strong> {{order.username}} ({{order.email}})</p>
  <p><strong>Tổng tiền:</strong> {{order.total}}₫</p>
  <p><strong>Trạng thái hiện tại:</strong> 
    <span class="status-badge status-{{order.status}}">{{orderStatus order.status}}</span>
  </p>

  <form action="/admin/orders/{{order.id}}/status" method="POST" class="mb-4">
    <label for="status" class="form-label fw-bold">Cập nhật trạng thái:</label>
    <select name="status" id="status" class="form-select">
      <option value="pending" {{#if (eq order.status "pending")}}selected{{/if}}>Đang xử lý</option>
      <option value="paid" {{#if (eq order.status "paid")}}selected{{/if}}>Đã thanh toán</option>
      <option value="failed" {{#if (eq order.status "failed")}}selected{{/if}}>Thanh toán thất bại</option>
      <option value="shipping" {{#if (eq order.status "shipping")}}selected{{/if}}>Đang giao</option>
      <option value="completed" {{#if (eq order.status "completed")}}selected{{/if}}>Hoàn tất</option>
      <option value="cancelled" {{#if (eq order.status "cancelled")}}selected{{/if}}>Đã hủy</option>
    </select>
    <button class="btn btn-success btn-sm ms-2">Cập nhật</button>
  </form>

  <hr>

  <h4 class="mb-3">Sản phẩm trong đơn:</h4>
  <table class="table table-hover align-middle">
    <thead>
      <tr>
        <th>Ảnh</th>
        <th>Tên sản phẩm</th>
        <th>Số lượng</th>
        <th>Giá</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td><img src="{{this.img}}" alt="{{this.name}}"></td>
        <td>{{this.name}}</td>
        <td>{{this.quantity}}</td>
        <td>{{this.price}}₫</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>


