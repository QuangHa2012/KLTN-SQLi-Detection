<div class="container mt-4 admin-discounts">
  <h2 class="mb-4"><i class="bi bi-gift"></i> Danh sách quy tắc giảm giá</h2>

  <a href="/admin/discounts/add" class="btn btn-primary mb-3">+ Thêm quy tắc mới</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Tổng tối thiểu (₫)</th>
        <th>Giảm (%)</th>
        <th>Trạng thái</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#each discounts}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.minTotal}}</td>
        <td>{{this.discountPercent}}</td>
        <td>
          {{#if this.active}}
            <span class="text-success fw-bold">Hoạt động</span>
          {{else}}
            <span class="text-muted">Tắt</span>
          {{/if}}
        </td>
        <td>
          <a href="/admin/discounts/edit/{{this.id}}" class="btn btn-warning btn-sm">Sửa</a>
          <a href="/admin/discounts/delete/{{this.id}}" class="btn btn-danger btn-sm" onclick="return confirm('Xóa quy tắc này?')">Xóa</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>


<style>
/* --- Container tổng thể --- */
.container.admin-discounts {
    background-color: #fff;
    padding: 25px 30px;
    border-radius: 10px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.05);
    font-family: "Segoe UI", Roboto, sans-serif;
    color: #333;
    max-width: 900px;
    margin-top: 30px;
}

/* Tiêu đề */
.admin-discounts h2 {
    font-weight: 600;
    color: #222;
    text-align: center;
}

/* Buttons */
.admin-discounts .btn {
    border-radius: 8px;
    padding: 6px 14px;
    transition: all 0.2s ease;
    font-weight: 500;
}

/* Hover button */
.admin-discounts .btn-primary:hover {
    background-color: #0069d9;
    color: #fff;
}

.admin-discounts .btn-warning:hover {
    background-color: #e0a800;
    color: #fff;
}

.admin-discounts .btn-danger:hover {
    background-color: #c82333;
    color: #fff;
}

/* Table */
.admin-discounts table {
    border-radius: 10px;
    overflow: hidden;
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
}

.admin-discounts table th,
.admin-discounts table td {
    padding: 12px 15px;
    vertical-align: middle;
    text-align: center;
}

/* Header table */
.admin-discounts table thead th {
    background-color: #f5f5f5;
    font-weight: 600;
}

/* Hover row */
.admin-discounts table tbody tr:hover {
    background-color: #f9f9f9;
}

/* Status text */
.admin-discounts .text-success {
    color: #28a745 !important;
}
.admin-discounts .text-muted {
    color: #6c757d !important;
}

/* Khoảng cách dưới table */
.admin-discounts table {
    margin-bottom: 20px;
}

/* Responsive nhỏ */
@media (max-width: 768px) {
    .container.admin-discounts {
        padding: 20px 15px;
    }

    .admin-discounts .btn {
        margin-bottom: 8px;
        width: 100%;
    }

    .admin-discounts table th,
    .admin-discounts table td {
        font-size: 14px;
        padding: 8px 10px;
    }
}

</style>
