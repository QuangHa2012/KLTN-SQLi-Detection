<div class="container mt-4 admin-discount-edit">
  <h2><i class="bi bi-pen"></i> Sửa quy tắc giảm giá</h2>
  <form method="POST" action="/admin/discounts/edit/{{discount.id}}" class="mt-3">
    <div class="mb-3">
      <label>Tổng tối thiểu (₫)</label>
      <input type="number" name="minTotal" value="{{discount.minTotal}}" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Phần trăm giảm (%)</label>
      <input type="number" name="discountPercent" value="{{discount.discountPercent}}" class="form-control" required>
    </div>
    <div class="mb-3 form-check">
      <input type="checkbox" name="active" {{#if discount.active}}checked{{/if}}>
      <label>Kích hoạt?</label>
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a href="/admin/discounts" class="btn btn-secondary">Hủy</a>
  </form>
</div>

